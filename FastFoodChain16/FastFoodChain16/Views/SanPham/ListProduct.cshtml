@model IEnumerable<FastFoodChain16.Models.SanPham>

@{
    ViewData["Title"] = "ListProduct";
    Layout = null;
}
<p>
    <a asp-action="ListProduct" asp-controller="SanPham">ListProduct</a>
  <a asp-action="ListUser" asp-controller="NguoiDung">ListUser</a>
  <a asp-action="ThongKeSLSP" asp-controller="ThongKe">Statistical</a>
</p>
<h1 style="text-align:center;font-weight:bold;">DANH SÁCH SẢN PHẨM</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<head>
    <style type="text/css">
        table, th, td {
            border: 1px solid #ccc;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 10px;
        }

        tr:hover {
            background-color: #ddd;
            cursor: pointer;
        }
    </style>
</head>
<table class="table">
    <thead>
        <tr align="center" style="background-color:powderblue">
            <th>
                @Html.DisplayNameFor(model => model.TenSp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.MaLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaNcc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td align="center">
                @Html.DisplayFor(modelItem => item.TenSp)
            </td>
                <td align="center">
                @Html.DisplayFor(modelItem => item.DonGia)
           
                <td align="center">
                @Html.DisplayFor(modelItem => item.MaLoai)
            </td>
                <td align="center">
                @Html.DisplayFor(modelItem => item.MaNcc)
            </td>
                </td>
                <td align="center">
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSp">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaSp">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSp">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
