@model FastFoodChain16.Models.DonHang

@{
    ViewData["Title"] = "OrderProduct";
    Layout = null;
}

<h1 style="text-align:center;font-weight:bold;">ĐẶT HÀNG</h1>

<h4>Thông tin đơn hàng</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="OrderProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Omessage" class="control-label"></label>
                <input asp-for="Omessage" class="form-control" />
                <span asp-validation-for="Omessage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChiNhan" class="control-label"></label>
                <input asp-for="DiaChiNhan" class="form-control" />
                <span asp-validation-for="DiaChiNhan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Đặt hàng" class="btn btn-primary" />
            </div>
@*            @if (ViewData["Loi2"] != null)
            {
                <div class="text-danger">@ViewData["Loi2"]</div>
            }*@
        </form>
    </div>
</div>

<div>
    <a asp-action="ListProduct" asp-controller="KhachHang">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
