@model FastFoodChain16.Models.KhachHang

@{
    ViewData["Title"] = "Create";
    
}

<h1 style="text-align:center;font-weight:bold;">TẠO MỚI TÀI KHOẢN</h1>

<h4>Thông tin tài khoản</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HoKh" class="control-label"></label>
                <input asp-for="HoKh" class="form-control" />
                <span asp-validation-for="HoKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenKh" class="control-label"></label>
                <input asp-for="TenKh" class="form-control" />
                <span asp-validation-for="TenKh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sdt" class="control-label"></label>
                <input asp-for="Sdt" class="form-control" />
                <span asp-validation-for="Sdt" class="text-danger"></span>
@*                @if (ViewData["Loi"] != null)
                {
                    <div class="text-danger">@ViewData["Loi"]</div>
                }*@
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tiếp" class="btn btn-primary" />
            </div>
             @if (ViewData["Loi"] != null)
                {
                    <div class="text-danger">@ViewData["Loi"]</div>
                }
        </form>
    </div>
</div>

<div>
    <a asp-action="Login">Quay lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
