@model FastFoodChain16.Models.TaiKhoan
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<h1 style="text-align:center">ĐĂNG NHẬP</h1>
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
             <td>Tên đăng nhập:</td>
             <td>
                 @Html.TextBox("TenDangNhap")
                 @ViewData["Loi1"]
             </td>
        </tr>
        <tr style="height:40px">
             <td align="right">Mật khẩu:</td>
             <td>
                 @Html.TextBox("MatKhau")
                 @ViewData["Loi2"]
             </td>
        </tr>
        <tr style="height:40px">
             <td></td>
             <td>
                 <input type="submit" value="Đăng nhập"/>
                 <a asp-action="Create" asp-controller="KhachHang">   Đăng ký</a>
             </td>
        </tr>
        <tr>
            <td></td>
            <td>
               <div>@ViewBag.Thongbao</div>
            </td>
        </tr>
    }
</table>
